#!/bin/sh
# Ensures all repositories are on default branch and up-to-date.

set -xeu

main() {
    git checkout main
    git pull --rebase origin main

    (
        cd pillar/private
        git checkout main
        git pull --rebase origin main
    )

    (
        cd salt/private
        git checkout main
        git pull --rebase origin main
    )

    (
        cd salt/maintenance
        git checkout main
        git pull --rebase origin main
    )
}

main
